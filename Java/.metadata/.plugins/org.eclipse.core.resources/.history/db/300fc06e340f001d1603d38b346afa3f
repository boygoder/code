package Character;

public class Hero {
	public String name; //= "hero1";  
	public float hp;
	float armor;
	int moveSpeed;
	int death;
	int kills=0;
	int assists;
	int money;
	public Hero(){
		name = "hero2";
	}
	{
		name = "hero3";
	}
	public Hero(String name,float hp)
	{
		this.name = name;
		this.hp = hp;
	}
	public Hero(
		String name,
		float hp,
		float armor,
		int moveSpeed)
	{
		this(name,hp);
		this.armor = armor;
		this.moveSpeed = moveSpeed;
		System.out.println("name: "+name+" hp: "+hp + " armor: "+armor + "moveSpeed: " + moveSpeed);
	}
	public void kill(Mortal m)
	{
		System.out.print("击杀者："+this.name + " , ");
		m.die();
		kills++;
	}
	public static void main(String[] args) {
			Hero h = new ADHero("盖伦",1000);
			ADHero adh =  new ADHero("ad",2000);
			APHero aph = new APHero("ap",800);
			ADAPHero adaph =  new ADAPHero("adap",1200);
			h.kill(adh);
			h.kill(aph);
			h.kill(adaph);
			
	}
}


